              echo $media->link($media->value('dcterms:creator')) . ' - ';
              echo $media->link($media->value('dcterms:license'));
             ?>
        </li>
    <?php endforeach; ?>
</ul>
<?php endif; ?>
</div>
<div class="testHalf">
